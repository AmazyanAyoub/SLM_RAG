# .env.example

# Groq API key for both student and teacher models
GROQ_API_KEY=your_groq_api_key_here

# Embedding model selection (must match one of configs/base.yaml: retrieval.embedder.allowed_models)
EMBEDDING_MODEL_NAME=bge-large
# EMBEDDING_MODEL_NAME=gte-large

# Optional: environment (dev / prod)
APP_ENV=dev

# Backend server configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Streamlit frontend configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501
